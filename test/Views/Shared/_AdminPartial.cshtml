@using test.Provider
@if (User.Identity.IsAuthenticated)
{
    var customRoleProvider = new CustomRoleProvider();

    if (customRoleProvider.GetOneRoleForUser(User.Identity.Name) == "Admin")
    {
        <li class="dropdown">
            <a href="#" data-toggle="dropdown" class="dropdown-toggle">Admin <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Добавить пользователя", "AddUser", "Admin")</li>
                <li>@Html.ActionLink("Добавить проект", "AddProject", "Admin")</li>
                <li>@Html.ActionLink("Добавить задачу", "AddTask", "Admin")</li>
                <li class="divider"></li>
                <li>@Html.ActionLink("Привязать пользователя к проекту", "JoinUserToProject", "Admin")</li>
                <li class="divider"></li>
                <li><a href="#">Отчет по задачах</a></li>
                <li><a href="#">Отчет по пользователях</a></li>
            </ul>
        </li>
    }
}